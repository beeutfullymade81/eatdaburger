<div id="allBurgers">
  <div id="burgersToEat">
    <h2>Burgers Ready To Be Eaten</h2>
    <div class="row">
      <div class="col-md-4 col-md-offset-1">
        <div class="panel-panel default">
          <ul class="list-group">
            {{#each burgers}} {{#unless this.devoured}}
            <li class="list-group-item">
              <div class="input-group">
                <p > {{this.burger_name}} </p>
                <span class="input-group-btn">
                  <form action="burgers/eat/{{this.id}}" method="POST">  
                  {{!-- need to fix the route to make the changes to set burger to devoured --}}
                    <input type="hidden" name="devoured" value="true">
                    <button class="btn btn-default" type="submit"> EAT IT! </button>
                  </form>
                </span>
              </div>
            </li>
            {{/unless}} {{/each}}
          </ul>
        </div>
      </div>

      <div id="burgersAte">
        <h2>You Have Devoured These Burgers:</h2>
        <ul>
          {{#each burgers}} {{#if devoured}}

          <p class="burgers">{{this.burger_name}}</p>

          {{/if}} {{/each}}
        </ul>
      </div>
    </div>